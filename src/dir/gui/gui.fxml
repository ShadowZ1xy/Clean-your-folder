<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainField" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #16191C;" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="dir.gui.Controller">
    <Label layoutX="192.0" layoutY="20.0" text="Clean your folder" textAlignment="CENTER" textFill="#3fd14b">
        <font>
            <Font name="Hack Regular" size="31.0"/>
        </font>
    </Label>
    <AnchorPane layoutX="1.0" layoutY="75.0" prefHeight="425.0" prefWidth="700.0"
                style="-fx-background-color: #3A4147;">
        <AnchorPane layoutX="25.0" layoutY="11.0" prefHeight="31.0" prefWidth="662.0">
            <children>
                <Button fx:id="browseButton" layoutX="551.0" layoutY="1.0" mnemonicParsing="false"
                        onAction="#browseButtonHandler" prefHeight="29.0" prefWidth="76.0"
                        style="-fx-background-color: #3F56D1;" text="Browse" textFill="WHITE"/>
                <Label prefHeight="30.0" prefWidth="90.0" text="Directory:" textFill="WHITE">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <TextField fx:id="pathTextField" layoutX="97.0" layoutY="1.0" prefHeight="30.0" prefWidth="450.0"
                           promptText="Example: C:\Users\MyUser\Desktop"
                           style="-fx-background-color: #23272B; -fx-text-fill: fafafa;">
                    <font>
                        <Font name="Hack Regular" size="13.0"/>
                    </font>
                </TextField>
                <Button layoutX="629.0" layoutY="1.0" mnemonicParsing="false" onAction="#reloadButtonHandler"
                        prefHeight="29.0" prefWidth="29.0" style="-fx-background-color: #3F56D1;" textFill="WHITE">
                    <font>
                        <Font name="Calibri Bold" size="1.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@res/refresh.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
        <Button fx:id="cleanButton" layoutX="299.0" layoutY="367.0" mnemonicParsing="false"
                onAction="#cleanButtonHandler" prefHeight="46.0" prefWidth="103.0"
                style="-fx-background-color: #3F56D1;" text="Clean" textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <AnchorPane layoutX="56.0" layoutY="91.0" prefHeight="0.0" prefWidth="601.0">
            <children>
                <TableView fx:id="extensionsCheckboxTable" layoutY="10.0" prefHeight="241.0" prefWidth="115.0"
                           style="-fx-background-color: #9EA1A4;">

                    <columns>
                        <TableColumn fx:id="checkboxCol" prefWidth="25.0" resizable="false">
                            <graphic>
                                <CheckBox fx:id="selectAllCheckbox" cacheShape="false" centerShape="false"
                                          mnemonicParsing="false" onAction="#allCheckBoxHandler" prefHeight="17.0"
                                          prefWidth="0.0"/>
                            </graphic>
                        </TableColumn>
                        <TableColumn fx:id="extensionCol" prefWidth="75.0" resizable="false"
                                     style="-fx-alignment: center;" text="Extension"/>
                    </columns>
                </TableView>
                <AnchorPane layoutX="156.0" prefHeight="276.0" prefWidth="200.0">
                    <children>
                        <ListView fx:id="aiExtList" layoutY="70.0" prefHeight="181.0" prefWidth="200.0"
                                  style="-fx-background-color: #9EA1A4; -fx-alignment: center;"/>
                        <TextField fx:id="aiTextField" layoutY="37.0" prefHeight="25.0" prefWidth="200.0"
                                   promptText="Type extension" style="-fx-alignment: center;"/>
                        <Button fx:id="aiAdd" layoutY="9.0" mnemonicParsing="false" onAction="#aiAddHandler"
                                style="-fx-background-color: #3F56D1;" text="Add" textFill="WHITE"/>
                        <Button fx:id="aiDelete" layoutX="148.0" layoutY="9.0" mnemonicParsing="false"
                                onAction="#aiDeleteHandler" style="-fx-background-color: #3F56D1;" text="Delete"
                                textFill="WHITE"/>
                        <Label layoutX="52.0" layoutY="7.0" prefHeight="30.0" prefWidth="90.0" text="Always ignore"
                               textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="393.0" prefHeight="276.0" prefWidth="200.0">
                    <children>
                        <ListView fx:id="acExtList" layoutY="70.0" prefHeight="181.0" prefWidth="200.0"
                                  style="-fx-background-color: #9EA1A4; -fx-alignment: center;"/>
                        <TextField fx:id="acTextField" layoutY="37.0" prefHeight="25.0" prefWidth="200.0"
                                   promptText="Type extension" style="-fx-alignment: center;"/>
                        <Button fx:id="acAdd" layoutY="9.0" mnemonicParsing="false" onAction="#acAddHandler"
                                style="-fx-background-color: #3F56D1;" text="Add" textFill="WHITE"/>
                        <Button fx:id="acDelete" layoutX="148.0" layoutY="9.0" mnemonicParsing="false"
                                onAction="#acDeleteHandler" style="-fx-background-color: #3F56D1;" text="Delete"
                                textFill="WHITE"/>
                        <Label layoutX="55.0" layoutY="7.0" prefHeight="30.0" prefWidth="90.0" text="Always clean"
                               textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </AnchorPane>
    <Button layoutX="663.0" mnemonicParsing="false" onAction="#closeApplication" prefHeight="37.0" prefWidth="37.0"
            style="-fx-background-color: #3F56D1;" textFill="WHITE">
        <font>
            <Font name="Calibri" size="1.0"/>
        </font>
        <graphic>
            <ImageView fitHeight="21.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@res/close.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
